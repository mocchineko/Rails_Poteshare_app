<div class="container device">
    <div class="device_frame">
        <p class="my-4">ログイン</p>
        <div class="device_inner">
            <%= form_tag("/login", method: :post, class: "new_user", id: "new_user") do %>
                <div class="field form-row">
                    <div class="col-2 required-b pt-2"></div>
                    <input autocomplete="email" class="form-control col-10 px-2" placeholder="メールアドレス" type="email" value="<%= @email %>" name="user[email]" id="user_email">
                </div>
                <div class="field form-row">
                    <div class="col-2 required-b pt-2"></div>
                    <input autocomplete="current-password" class="form-control col-10 px-2" placeholder="パスワード" type="password" value="<%= @password %>" name="user[password]" id="user_password">
                </div>
                <div class="actions">
                    <input type="submit" name="commit" value="ログイン" class="form-control btn-primary my-4" data-disable-with="ログイン">
                </div>
            <% end %>
            <%= link_to("新しいアカウントを作成", signup_path) %><br>
        </div>
    </div>
</div>