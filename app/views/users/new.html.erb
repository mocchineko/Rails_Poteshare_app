<div class="container device">
    <div class="device_frame">
        <p class="my-4">新しいアカウントを作成</p>
        <div class="device_inner">
            <%= form_tag("/users/create", method: :post, class: "new_user") do %>
                <input type="hidden" name="authenticity_token">
                <div class="error_explanation">
                    <h2>
                        <%= render 'layouts/error_messages', model: f.object %>
                    </h2>
                </div>
                <input  class="form-control col-10 px-2" placeholder="メールアドレス" type="email" value="<%= @email %>" name="user[email]" id="user_email">
                <div class="field form-row">
                    <div class="col-2 required-b pt-2"></div>
                    <input autocomplete="name" class="form-control col-10 px-2" placeholder="ユーザー名" type="text"
                        name="name" id="user_name">
                </div>
                <div class="field form-row">
                    <div class="col-2 required-b pt-2"></div>
                    <input autocomplete="email" class="form-control col-10 px-2" placeholder="メールアドレス" type="email" name="email" id="user_email">
                </div>
                <div class="field form-row">
                    <div class="col-2 required-b pt-2"></div>
                    <input autocomplete="new-password" class="form-control col-10 px-2" placeholder="パスワード"
                        type="password" name="password" id="user_password" value="<%= @user.password %>">
                </div>
                <div class="field form-row">
                    <div class="col-2 required-b pt-2"></div>
                    <input autocomplete="new-password" class="form-control col-10 px-2" placeholder="パスワード確認"
                        type="password" name="password_confirmation" id="user_password_confirmation">
                </div>
                <div class="actions">
                    <input type="submit" name="commit" value="新しいアカウントを作成" class="form-control btn-primary my-4 "
                        data-disable-with="新しいアカウントを作成">
                </div>
            <% end %>
            <%= link_to("すでにアカウントをお持ちの方はログイン", "/login") %><br>
        </div>
    </div>
</div>