<div class="top">
    <div class="top-main">
        <div class="container">
            <div class="row col-lg-6">
                <div class="form-fream">
                    <div class="form-area">
                        <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
                        <form action="/rooms/search" method="get">
                            <label for="___">エリア</label>
                            <input type="text" name="area" id="area" class="form-control mb-4" value placeholder="東京">
                            <input type="submit" name="commit" value="探す" class="form-control btn-primary mb-4" data-disable-with="探す">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="panel-area m-5">
            <h1 class="section-title">おすすめのエリア</h1>
            <div class="row">
                    <div class="panel-item col-lg-3 col-6">
                        <span>東京</span>
                        <%= link_to image_tag("img_tokyo.jpg", {class: "panel-image"}), rooms_search_path %>
                        <div class="shadow"></div>
                    </div>
                    <div class="panel-item col-lg-3 col-6">
                        <span>大阪</span>
                        <%= link_to image_tag("img_osaka.jpg", {class: "panel-image"}), rooms_search_path %>
                        <div class="shadow"></div>
                    </div>
                    <div class="panel-item col-lg-3 col-6">
                        <span>京都</span>
                        <%= link_to image_tag("img_kyoto.jpg", {class: "panel-image"}), rooms_search_path %>
                        <div class="shadow"></div>
                    </div>
                    <div class="panel-item col-lg-3 col-6">
                        <span>札幌</span>
                        <%= link_to image_tag("img_sapporo.jpg", {class: "panel-image"}), rooms_search_path %>
                        <div class="shadow"></div>
                    </div>
            </div>
        </div>
    </div>
</div>
