<div class="container room-show">
    <div class="row">
        <div class="col-md-8">
            <img onerror="this.onerror=null;this.src='/assets/room01.jpg';" alt="部屋画像" class="room-show-image"
                src="/assets/room01.jpg">
            <div class="room-show-detile">
                <div class="room-show-detile-icon">
                    <a href="/"><img class="host-icon" src="/assets/default_icon.jpg"></a>
                </div>
                <div class="room-show-profile">
                    <p class="room-show-profile-name">っっg</p>
                    <p class="room-show-profile-address">東京</p>
                </div>
            </div>
            <p class="room-show-detile-content">っっk</p>
        </div>
        <div class="col-md-4">
            <div class="room-show-nav">
                <h5 class="price-icon">10 / 日</h5>
                <div class="room-show-date-select">
                    <form action="/reservations/new" accept-charset="UTF-8" method="get">
                        <label for="start_date">開始日</label>
                        <input type="date" name="start_date" id="start_date" value="" class="form-control mb-4">
                        <label for="end_date">終了日</label>
                        <input type="date" name="end_date" id="end_date" value="" class="form-control mb-4">
                        <label for="person_num">人数</label>
                        <input type="number" name="person_num" id="person_num" value="" class="form-control mb-4">
                        <input type="hidden" name="room_id" id="room_id" value="16">
                        <input type="submit" name="commit" value="予約する" class="btn btn-primary form-control"
                            data-disable-with="予約する">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>